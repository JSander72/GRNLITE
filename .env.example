# Environment Configuration for GRNLITE
# Copy this file to .env and update with your actual values

# ==============================================
# Application Environment
# ==============================================
NODE_ENV=development
DEBUG=true

# ==============================================
# Server Configuration
# ==============================================
# Port for Express.js server (default: 3000)
PORT=3000

# Django port (used in production with Gunicorn, default: 4000)
DJANGO_PORT=4000

# ==============================================
# Security Configuration
# ==============================================
# JWT secrets for authentication (REQUIRED - generate strong secrets)
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-here
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-here

# Django secret key (REQUIRED)
DJANGO_SECRET_KEY=your-django-secret-key-here

# ==============================================
# Database Configuration (PostgreSQL)
# ==============================================
# Full database URL for Django
DATABASE_URL=postgresql://username:password@localhost:5432/grnlite_postgresql

# Individual database settings (alternative to DATABASE_URL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=grnlite_postgresql
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# ==============================================
# Deployment Configuration (Render.com)
# ==============================================
# External URL for production deployment
RENDER_EXTERNAL_URL=https://grnlite.onrender.com

# App URL for keep-alive service
APP_URL=https://grnlite.onrender.com

# Health check endpoint
HEALTH_ENDPOINT=/api/health-check

# Keep-alive service configuration
PING_INTERVAL=*/14 * * * *
REQUEST_TIMEOUT=10000

# ==============================================
# Django Configuration
# ==============================================
# Allowed hosts (comma-separated)
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost,grnlite.onrender.com,testserver

# Static files configuration
STATIC_URL=/static/
STATIC_ROOT=staticfiles/

# Media files configuration
MEDIA_URL=/media/
MEDIA_ROOT=media/

# ==============================================
# Email Configuration
# ==============================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@grnlite.com

# Email Verification Settings
EMAIL_VERIFICATION_CODE_LENGTH=6
EMAIL_VERIFICATION_CODE_EXPIRY_MINUTES=15

# Instructions:
# 1. Copy this file to .env
# 2. Update EMAIL_HOST_USER and EMAIL_HOST_PASSWORD with your actual email credentials
# 3. For Gmail, you'll need to:
#    - Enable 2-factor authentication
#    - Generate an app password
#    - Use the app password instead of your regular password
# 4. For other email providers, update EMAIL_HOST and EMAIL_PORT accordingly
# 5. Generate secure JWT secrets using: openssl rand -base64 32